<div class='container'>
  <div class='card pt-3'>
    <div class='media card'>
      <img class='d-flex mr-3' src='<%= @question.gravatar %>' alt='Generic placeholder image'>
      <div class='media-body'>
        <h5 class='mt-0 mb-1'><%= @question.email %> asked: </h5>
        <%= @question.body %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="pt-3">
      <button class="btn btn-success btn-sm" href="" data-toggle="modal" data-target="#new_answer_modal">Submit new answer</button>
    </div>

    <%= render 'home/new_answer_form' %>

    <% @answers.each do |answer| %>
      <div class="media pt-3">
        <img class="d-flex mr-3" src='<%= answer.gravatar %>' alt="Generic placeholder image">
        <div class="media-body">
          <h5 class="mt-0 mb-1"><%= answer.email %> answered:</h5>
          <%= time_ago_in_words answer.created_at %> ago
          <br/>
          <%= answer.body %>
        </div>
      </div>
    <% end %>

    <% if @answers.empty? %>
        <br>
        <div class="alert alert-info">Nothing here yet. Be the first</div>
    <% end %>
  </div>
</div>